<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbImage1"
                style="@style/RadioButtonTheme"
                android:text="Image 1"></RadioButton>

            <RadioButton
                android:id="@+id/rbImage2"
                style="@style/RadioButtonTheme"
                android:text="Image 2"></RadioButton>

            <RadioButton
                android:id="@+id/rbImage3"
                style="@style/RadioButtonTheme"
                android:text="Image 3"></RadioButton>

        </RadioGroup>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>

</LinearLayout>